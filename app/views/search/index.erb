<html>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="search-h1"> 
          <%= params[:user] %>'s
        </div>
        <div class="search-h2">
          <%= params[:repo] %>
        </div>
      </div>

    </div>
    <h4> Language </h4>
    <p> Primary language is: <%= @repo.language %></p>

    <div class="row">
      <div class="col-md-2 image_container">
        <%= image_tag((getLanguageURL @repo.language), class: "img-responsive") %>
      </div>
    </div>

    <h4> Other language data:</h4>
    <% @languages.each do |key,value| %>
        <p><%= key %>: <%= value %> bytes.</p>
    <% end %>

    <h4>Pulls</h4>
    <% @pulls.each do |pull| %>
        <p>Pull request <%= pull.number %> is: <%= pull.state %></p>
    <% end %>

	<h4>Contributors</h4>
	<p><%= @contrib%></p>
	
	<h4>Readme</h4>
	<p><%= @read %></p>
	
	<h4>Stars</h4>
	<p><%= @repo.stargazers_count %></p>
	<p><%= %></p>
	
	<h4>Growth Rate</h4>
	<p>Repo Created: <%= repoTime = @repo.created_at.sub("T"," ").sub("Z", " ") %></p>
	<p>Current time: <%= time = Time.now.strftime("%Y-%m-%d %H:%M:%S") %></p>
	<p>Approximately <%= 1.0/(getTime(repoTime, time).to_f/@repo.stargazers_count.to_f) %> stars per day</p>
	
	<%= link_to 'Return to Homepage', :back %>

</html>
