<html>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="search-h1"> 
          <%= params[:user] %>'s
        </div>
        <div class="search-h2">
          <%= params[:repo] %>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-md-offset-3 col-md-2 image_container">
        <%= image_tag((getLanguageURL @repository.repo.language), class: "img-responsive") %>
      </div>
      <div class="col-md-2">
        <p><%= raw(buildStars @repository.repo.stargazers_count) %></p>
      </div>
      <div class="col-md-2">
        <h3><%= (@repository.growthRate.rate).round(2) %> stars per day</h3>
      </div>
    </div>
    <hr width="70%" style="border-top: 2px solid gray">

    <div class="row">
      <div class="col-md-offset-3 col-md-2 ">
        <h4> Other language data:</h4>
        <% @repository.languages.each do |language,bytes| %>
            <p><%= language %>: <%= bytes %> bytes.</p>
        <% end %>
        <%= pie_chart @repository.languages.each %>
      </div>
      <div class="col-md-2">
        <h4>Birthday</h4>
        <p>Repo Created: <%= @repository.growthRate.repoTime %></p>
        <p>Repo Age: <%= @repository.growthRate.timeSince %> days</p>
      </div>
      <div class="col-md-2 ">
        <p><%= raw(buildReadme @repository.read) %></p>
        
      </div>
    </div>


    <h4>Contribution Statistics</h4>
    <p>Percentage of pull requests merged: <%= @repository.percentagePullsMerged %></p>
    <p>Ratio of pull requests to issues: <%= @repository.pullsToIssuesRatio %></p>

	<h4>Contributors</h4>
	<p><%= @repository.contributors %></p>
	
    <%= @repository.relativePopularity %>
	
  <!-- <p>Current time: <%= @repository.growthRate.time %></p> -->

    <div class="text-center">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-large">
          <%= link_to 'Return to Homepage', '/' %>
        </button>
        <button type="button" class="btn btn-default btn-large">
          <%= link_to 'Pull new data from database', '#' %>
        </button>
      </div>
    </div>
</html>
